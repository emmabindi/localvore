<%= form_with model: listing, local: true do |f| %>

<form>
  <div class="form-group">
    <div class="row">
    <div class="col-md-4">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="col-md-4">
  <%= f.label :photo %> 
  <%= f.file_field :photo, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>
  </div>

  <div class="form-group">
    <div class="row">
    <div class="col-md-4">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
      </div>

    <div class="col-md-4">
      <%= f.label :qty %>
      <%= f.text_field :qty, class: "form-control" %>
    </div>
  </div>
</div>


  <div class="form-group">
    <p>Unit of Measure: <%= f.collection_select(:uom_id, Uom.all, :id, :unit) %></p>
  </div>

  <div class="form-group">
  <%= f.label :categories %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>

  <div class="form-group">
  <%= f.label :subcategories %>
  <%= f.collection_select(:subcategory_id, Subcategory.all, :id, :name) %>
  </div>

  <div class="form-group">
    <div class="row">
    <div class="col-md-8">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  </div>
</div>
</div>

  <%= f.submit %>
<% end %>

</form>
