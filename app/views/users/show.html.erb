<h2>Meet the Grower</h2>

<div class="card profile" style="width: 38rem;">

<div class="card-img-top">
<div class="row">
<%= image_tag(@user.profile_photo, :class => "img-index profile-photo") if @user.profile_photo.attached? %>

<div class="profile-map" id="map"></div>
<%= javascript_pack_tag "leaflet/show" %>
</div>
</div>

  
<div class="card-body">
  <h3 class="card-text">🧑‍🌾 <%= @user.first_name %></h3>
  <p class="card-text"><strong>Bio: </strong><%= @user.bio %></p>
  <p class="card-text"><strong>Suburb: </strong><%= @user.location.suburb %></p>
</div>

<div class="card-footer">
  <strong><%= @user.first_name %>'s Produce Listings:</strong>
  <ol>
  <% @user_listings.each do |listing| %>
    <li><%= link_to listing.title, listing_path(listing) %>
    <%= number_to_currency(listing.price) %></li>
  <% end %>
  </ol>
</div>
</div>
<hr>
<%= render "shared/back" %>

